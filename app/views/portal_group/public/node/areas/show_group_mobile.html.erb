<div class="contentPortalGroupArea contentPortalGroupAreaGroup">

<div class="latest">
  <div class="h2">新着情報</div>
  <% if @docs.size > 0 %><div class="docs">
    <% @docs.each do |doc| %>
    <div class="doc">・<%=link_to doc.title, doc.public_full_uri%><%= doc.date_and_site %></div>
    <% end %>
  </div><% end %>
</div>

<%= paginate @docs %>

<% if @items.size > 0 %>
<br />
<div class="cities">
  <div class="h3">■地域詳細一覧</div>
  <div><% @items.each do |c| %><%= link_to "#{c.title}", "../#{c.name}/" %><span>/</span><% end %></div>
</div>
<% end %>

</div>
