<!-- skip reading -->
<div id="cmsPreviewMark" style="margin: 1px; padding: 5px 10px; border-bottom: 1px solid #fff; background-color: #000; color: #fff; line-height: 1.5; font-family: sans-serif;">
<span style="cursor: pointer;" onclick="document.getElementById('cmsPreviewMark').style.display='none';">
プレビュー：&nbsp;終了する場合は、ブラウザのタブの×で閉じてください。
</span>
<%- if Core.site.use_future_preview? -%>
  <span style="float: right;">
  <%= form_tag url_for(path: params[:path]), method: :get, id: 'cmsPreviewForm' do -%>
    <%= text_field_tag :preview_at, l(Page.preview_at), class: 'datetimepicker', style: 'width: 150px;', placeholder: 'プレビュー日時' %>
    <%-
    terminals =  [['PC','']]
    terminals << ['スマホ','s'] if Core.site.use_smart_phone_feature?
    terminals << ['携帯','m'] if Core.site.use_mobile_feature?
    -%>
    <%- terminals.each do |name, value| -%>
      <%= radio_button_tag :preview_terminal, value, value == Page.preview_terminal %><%= label_tag "preview_terminal_#{value}", name %>
    <%- end -%>
    <%= submit_tag '設定' %>
  <%- end -%>

  <%- unless Page.mobile? -%>
  <%= javascript_tag do -%>
  document.addEventListener('DOMContentLoaded', function() {
    flatpickr('input.datetimepicker', { locale: "ja", enableTime: true, time_24hr: true });
  });
  <%- end -%>
  <%- end -%>
  </span>
<%- end -%>
</div>
<!-- /skip reading -->
