<h2><%= @site.name %> ： Basic認証</h2>

<div class="actionMenu">
<%= link_to "ドメイン詳細", cms_site_path(@site.id) %>
<span class="separator"></span>
<%= action_menu :new     if Core.user.has_priv?(:create, item: Core.concept) %>
<%= action_menu :index %>
<%= action_menu :show %>
<%= action_menu :edit    if @item && @item.editable? %>
<%= action_menu :destroy if @item && @item.deletable? %>
<%- case action_name -%>
<%- when 'index' -%> 
  <span class="separator"></span>
  <%- if @site.use_basic_auth? -%>
  <%= link_to "認証ON（更新）", url_for(action: :enable), confirm: "Basic認証を有効にしますか？" %>
  <%= link_to "認証OFF", url_for(action: :disable), confirm: "Basic認証を無効にしますか？" %>
  <%- else -%>
  <%= link_to "認証ON", url_for(action: :enable), confirm: "Basic認証を有効にしますか？" %>
  <%- end -%>
<%- end -%>
</div>
