<p class="form">Basic認証</p>

<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.radio_buttons :state, @item.class.state_options, :class => 'status' %></td>
  </tr><tr>
    <th><%= f.label :name %></th>
    <td><%= f.text_field :name, :class => 'nameEn' %></td>
  </tr><tr>
    <th><%= f.label :password %></th>
    <td><%= f.text_field :password, :class => 'nameEn' %></td>
  </tr><tr>
    <th><%= f.label :target_type %></th>
    <td><%= f.radio_buttons :target_type, @item.class.target_type_options, :class => 'status' %></td>
  </tr><tr id="targetLocation">
    <th><%= f.label :target_location %></th>
    <td>/<%= f.text_field :target_location, :class => 'nameEn' %></td>
  </tr>
</table>

<%= creator_form f %>

<%= javascript_tag do -%>
(function($) {
  $(function() {
    $(document).ready(function () {
      toggleTargetLocation();
    });
    $('input[name="item[target_type]"]').on('change', function (event) {
      toggleTargetLocation()
    });

    function toggleTargetLocation(){
      var value = $('input[name="item[target_type]"]:checked').val();
      switch (value){
        case 'all':
          $('#targetLocation').hide();
          break;
        case '_system':
          $('#targetLocation').hide();
          break;
        case 'directory':
          $('#targetLocation').show();
          break;
      }
    }
  });
})(jQuery);
<%- end -%>