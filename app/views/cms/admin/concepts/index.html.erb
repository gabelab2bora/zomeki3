<div class="crudTree">
<div class="tree">
  <p>
    <%= link_to :show, { action: :show, parent: @parent.parent_id, id: @parent } if @parent.id != 0 %>
    <%= @parent.name %>
  </p>
  <div class="links">
    <%= render 'concepts', items: @items, parent: nil %>
  </div>
</div>

<div class="content">
  <%= render 'contents' %>
</div>
<div class="footer"></div>
</div>

<script type="text/javascript">
$(function() {
  $('.tree .links').simpleTree();
});
</script>
