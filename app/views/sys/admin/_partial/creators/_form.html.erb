<%
return unless Core.user.has_auth?(:manager)

if Core.user.root?
  groups = Core.site.all_groups_for_option
  users = Core.site.all_users_for_option
else
  groups = Core.site.groups_for_option
  users = Core.site.users_for_option
end

if item.in_creator.blank?
  item.in_creator = {
    'group_id' => Core.user_group.id,
    'user_id'  => Core.user.id
  }
end

%><br />

<p class="managerForm">作成者</p>

<table class="show">
  <tr class="onlyManager">
    <th>グループ</th>
    <td><%= select_tag "item[in_creator][group_id]", options_for_select(groups, item.in_creator['group_id']), include_blank: true %></td>
  </tr>
  <tr class="onlyManager">
    <th>ユーザー</th>
    <td><%= select_tag "item[in_creator][user_id]", options_for_select(users, item.in_creator['user_id']), include_blank: true %></td>
  </tr>
</table>
