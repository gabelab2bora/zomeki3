<%= render 'search' %>

<table class="index">
  <tr>
    <th style="width: 60px; padding: 0px; text-align: center;">詳細</th>
    <th style="width: 200px;"><%= Sys::ProcessLog.human_attribute_name :name %></th>
    <th style="width: 200px;"><%= Sys::ProcessLog.human_attribute_name :summary %></th>
    <th style="width: 120px; text-align: center;"><%= Sys::ProcessLog.human_attribute_name :started_at %></th>
    <th style="width: 120px; text-align: center;"><%= Sys::ProcessLog.human_attribute_name :updated_at %></th>
    <th style="width: 120px; text-align: center;"><%= Sys::ProcessLog.human_attribute_name :closed_at %></th>
    <th style="width: 80px;"><%= Sys::ProcessLog.human_attribute_name :total %></th>
    <th style="width: 60px;"><%= Sys::ProcessLog.human_attribute_name :success %></th>
    <th style="width: 60px;"><%= Sys::ProcessLog.human_attribute_name :error %></th>

  </tr>
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, sys_process_log_path(:id => item.id) %></td>
    <td><%= item.name %></td>
    <td><%= item.summary_lael %></td>
    <td style="text-align: center;"><%= safe{item.started_at.strftime('%Y-%m-%d %H:%M')} %></td>
    <td style="text-align: center;"><%= safe{item.updated_at.strftime('%Y-%m-%d %H:%M')} %></td>
    <td style="text-align: center;"><%= safe{item.closed_at.strftime('%Y-%m-%d %H:%M')} %></td>
    <td style="text-align: center;"><%= item.current %><%= "/#{item.total}" if item.total %></td>
    <td style="text-align: center;"><%= item.success %></td>
    <td style="text-align: center;"><%= item.error %></td>
  </tr>
  <% end %>
</table>

<%= paginate @items %>

