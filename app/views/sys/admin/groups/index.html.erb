<div class="crudTree">
<div class="tree">
  <%- if @root -%>
  <p>
    <%= link_to :show, { action: :show, parent: @root.parent_id.to_i, id: @root } %>
    <%= @root.name %>
  </p>
  <%- end -%>
  <div class="links">
    <%= render 'groups', groups: @groups, parent: nil %>
  </div>
</div>

<div class="content">
<%= render 'users', users: @users if @parent %>
</div>

<div class="footer"></div>
</div>

<script type="text/javascript">
$(function() {
  $('.tree .links').simpleTree();
});
</script>
