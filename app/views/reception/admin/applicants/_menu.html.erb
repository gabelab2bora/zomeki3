<%- action = I18n.t("actions.#{action_name}", default: '') -%>
<h2><%= @content.name %> ： <%= @course.title %> ： <%= @open.title %> ： <%= Reception::Applicant.model_name.human %><%= action %></h2>

<div class="actionMenu">
  <%= link_to '戻る', reception_courses_path if action_name == 'index' %>
  <%= action_menu :new %>
  <%= action_menu :index %>
  <%= action_menu :show %>
  <%= action_menu :edit if @item.try(:editable?) %>
  <%= action_menu :destroy if @item.try(:deletable?) %>
  <span style="margin-left: 20px;">
    <%= "定員：#{@course.capacity}名" if @course.capacity.present? %>
  </span>
</div>
