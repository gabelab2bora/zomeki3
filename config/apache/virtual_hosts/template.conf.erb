<% zomeki_root = Rails.root -%>
<VirtualHost *:80>
    ServerName <%= domain %>
<% if mobile_domain.present? -%>
    ServerAlias <%= mobile_domain %>
    SetEnvIf Host <%=Regexp.quote mobile_domain %> MOBILE_SITE
<% end -%>
    AddType text/x-component .htc
    Alias /_common/ <%= zomeki_root %>/public/_common/
    DocumentRoot <%= public_path %>
    Include <%= zomeki_root %>/config/rewrite/base.conf
    Include <%= config_path %>/rewrite.conf
</VirtualHost>
