
client_max_body_size 1000M;

proxy_connect_timeout 120;
proxy_read_timeout    120;
proxy_send_timeout    120;

set $terminal 0;
if ($http_user_agent ~* ^(DoCoMo|KDDI|Up\.Browser|J-PHONE|vodafone|SoftBank)) {
  set $terminal 1;
}
if ($http_user_agent ~* (Android|iPhone|iPod|MSIEMobile|Windows\sPhone)) {
  set $terminal 2;
}

location ^~ /_api {
  error_page 418 = @proxy; return 418;
}

location ~ /_(smartphone|mobile) {
  try_files $uri $uri/index.html @proxy;
}

location ~ /_(common|themes|files) {
  try_files $uri @proxy;
}

location @proxy {
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;

  proxy_pass http://zomeki_unicorn;
}
