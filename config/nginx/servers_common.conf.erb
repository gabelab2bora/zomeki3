location ^~ /_api {
  error_page 418 = @proxy; return 418;
}

if ($http_user_agent ~* ^(DoCoMo|KDDI|Up\.Browser|J-PHONE|vodafone|SoftBank)) {
  set $is_mobile 1;
}

if ($http_user_agent ~* (Android|iPhone|iPod|MSIEMobile|Windows\sPhone)) {
  set $is_smartphone 1;
}

location /_smartphone {
  try_files $uri $uri/index.html @proxy;
}

location /_mobile {
  try_files $uri $uri/index.html @proxy;
}

location /_common {
  try_files $uri @proxy;
}

location /_themes {
  try_files $uri @proxy;
}

location @proxy {
  proxy_set_header X-Forwarded-Host $host;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;

  proxy_pass http://zomeki_unicorn;
}
